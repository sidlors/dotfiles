[include]
    path=~/.gitconfig.local

[alias]
    lodag = log --oneline --decorate --color --all
    lod = log --oneline --decorate --color
    co = checkout
    ci = commit
    ap = add -p
    am = commit --amend
    unadd = reset HEAD --

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
